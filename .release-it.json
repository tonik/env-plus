{
  "github": {
    "release": true
  },
  "npm": {
    "publish": true
  },
  "git": {
    "requireBranch": "main",
    "commitMessage": "chore: release ${version} [skip ci]",
    "requireCleanWorkingDir": false
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    }
  }
}
